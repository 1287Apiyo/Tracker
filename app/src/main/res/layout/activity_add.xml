<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#000000" tools:context=".AddActivity">
    <!--  Top 'Add' Text  -->
    <TextView android:id="@+id/Add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/inter" android:text="Add" android:textColor="#A9FFE4" android:textSize="16sp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"/>
    <!--  Income Button  -->
    <RelativeLayout android:id="@+id/IncomeLayout" android:layout_width="150dp" android:layout_height="100dp" android:layout_marginStart="36dp" android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@id/Add" app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.appbar.MaterialToolbar android:id="@+id/Income" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#C0FFEC" android:minHeight="?attr/actionBarSize" android:theme="?attr/actionBarTheme"/>
        <TextView android:id="@+id/AddIncome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:fontFamily="@font/inter" android:text="Add Income" android:textColor="#CD7F32" android:textSize="11sp"/>
    </RelativeLayout>
    <!--  Expense Button  -->
    <RelativeLayout android:id="@+id/ExpenseLayout" android:layout_width="150dp" android:layout_height="100dp" android:layout_marginEnd="36dp" android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@id/Add" app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.appbar.MaterialToolbar android:id="@+id/Expense" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#DBA279" android:minHeight="?attr/actionBarSize" android:theme="?attr/actionBarTheme"/>
        <TextView android:id="@+id/AddExpense" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:fontFamily="@font/inter" android:text="Add Expenses" android:textColor="#A9FFE4" android:textSize="11sp"/>
    </RelativeLayout>
    <!--  Last Added Text  -->
    <TextView android:id="@+id/LastAdded" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:fontFamily="@font/inter" android:text="Last Added" android:textColor="#A9FFE4" android:textSize="16sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/IncomeLayout"/>
    <!--  RecyclerView for Income Transactions  -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerViewTransactionsIncome" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/LastAdded" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:padding="16dp" android:scrollbars="vertical"/>
    <!--  RecyclerView for Expense Transactions  -->
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerViewTransactionsExpense" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/recyclerViewTransactionsIncome" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:padding="16dp" android:scrollbars="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>