<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <!-- Hello Anne Text -->
    <TextView
        android:id="@+id/textHelloAnne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_bold"
        android:text="Hello Anne"
        android:textColor="#A9FFE4"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Available Balance Section -->
    <LinearLayout
        android:id="@+id/availableBalanceSection"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_below="@id/textHelloAnne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Available Balance"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="KES 400,000"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Income and Expense Section -->
    <LinearLayout
        android:id="@+id/incomeExpenseSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/availableBalanceSection"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="#A9FFE4"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Income"
                android:textColor="#CD7F32"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="KES 200,000"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="#CD7F32"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Expenses"
                android:textColor="#A9FFE4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="KES 100,000"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- View Categories Text -->
    <TextView
        android:id="@+id/textViewCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incomeExpenseSection"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter"
        android:text="View Categories"
        android:textColor="#A9FFE4"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Categories Grid -->
    <GridLayout
        android:id="@+id/gridCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCategories"
        android:layout_marginTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="2"
        android:rowOrderPreserved="false">

        <!-- Category 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F6F0"
            android:padding="16dp"
            android:fontFamily="@font/inter"
            android:text="Shopping"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- Category 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F6F0"
            android:padding="16dp"
            android:fontFamily="@font/inter"
            android:text="Subscriptions"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- Category 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F6F0"
            android:padding="16dp"
            android:fontFamily="@font/inter"
            android:text="Bills"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- Category 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F6F0"
            android:padding="16dp"
            android:fontFamily="@font/inter"
            android:text="Education"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- Category 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F6F0"
            android:padding="16dp"
            android:fontFamily="@font/inter"
            android:text="Transport"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- Category 6 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#F8F6F0"
            android:padding="16dp"
            android:fontFamily="@font/inter"
            android:text="Grocery"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textAlignment="center" />


        <!-- Add your categories here as TextViews or ImageViews -->

    </GridLayout>

    <!-- Recent Transactions and View All Transactions Button -->
    <RelativeLayout
        android:id="@+id/recentTransactionsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridCategories"
        android:layout_marginTop="24dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/textRecentTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Recent Transactions"
            android:textColor="#A9FFE4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/buttonViewAllTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!-- Recent Transactions List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentTransactionsSection"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <!-- Example Transaction 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#DBA279"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter"
                android:text="Transaction 1"
                android:textColor="#A9FFE4"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="KES 1,000"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Example Transaction 2 -->


        <!-- Add more transactions as needed -->

    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#A9FFE4"
        app:tint="@android:color/black"
        android:src="@android:drawable/ic_menu_add"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>

