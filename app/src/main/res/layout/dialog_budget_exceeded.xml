<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"

    android:padding="16dp">

    <!-- Title with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewMessageIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_message_24"
         />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Exceeded"
            android:textSize="18sp"
            android:textColor="#A9FFE4"
            android:textStyle="bold"
            android:paddingStart="8dp"
        android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Message Text -->
    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have exceeded your budget for this expense. Please review your budget and expense details."
        android:textSize="16sp"
        android:textColor="@android:color/white"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textColor="#CD7F32"
            android:backgroundTint="#A9FFE4"
            />

        <Button
            android:id="@+id/buttonReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:backgroundTint="#CD7F32"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
