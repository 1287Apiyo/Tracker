<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>
    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemIconSize">30dp</item> <!-- Adjust icon size -->
        <item name="itemTextColor">@color/colorAccent</item> <!-- Customize text color -->
    </style>


</resources>